# Usa una imagen de Node.js para compilar el proyecto Angular
FROM node:18 AS build

# Establece el directorio de trabajo
WORKDIR /app

# Copia los archivos package.json y package-lock.json para instalar las dependencias
COPY package*.json ./

# Instala las dependencias de Node
RUN npm install

# Copia el resto del c贸digo del proyecto
COPY . .

# Compila la aplicaci贸n Angular
RUN npm run build --prod

# Usa una imagen base de Nginx para servir la aplicaci贸n
FROM nginx:alpine

# Copia los archivos de la compilaci贸n (desde la etapa anterior) al servidor web de Nginx
COPY --from=build /app/dist/website/browser /usr/share/nginx/html

# Expone el puerto 80 para Nginx
EXPOSE 80

# Inicia Nginx
CMD ["nginx", "-g", "daemon off;"]
